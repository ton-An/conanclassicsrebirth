{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: watch editor errors",
      "type": "shell",
      "command": "npx tsx vue-tsc-filter.ts -p tsconfig.app.json --watch --noEmit",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/frontend"]
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
